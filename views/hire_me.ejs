<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="./css/bootstrap.min.css">
  <link rel="stylesheet" href="./css/style.css">
  <link rel="stylesheet" href="css/partial/responsive.css">

  <style>
    body {
      box-sizing: border-box;
      background-color: #9e9e9e4d;
    }
  </style>
  <title>Hire me</title>
</head>

<body>
  

  <div class="hire_me">
    <form action="\getHired" method="post">
      <div class="container">
        <h1>Hire me?</h1>
        <div class="row">
          <div class="col-lg-6 col-md-12">
            <input type="text" name="name" placeholder="Your name" >
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-12">
              <input type="text" name="email" id="email" placeholder="Your Email">
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-12">
              <input type="text" name="budget" placeholder="Your budget">
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-12">
              <textarea cols="" row="" name="detail" placeholder="Tell me about your project"></textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-12">
              <button type="submit" class="btn button primary-button text-uppercase">Submit</button>
            </div>
          </div>

        </div>
      </div>
    </form>
  </div>
  <script>
    email=document.querySelector("#email");
    document.querySelector("button").addEventListener("click",function(e){
        if(email.value===""){
          e.preventDefault();
          alert("Please enter atleast email");
        }
    });
  </script>
</body>

</html>